.home
    width auto
    height 100%
    padding 20px 10px
    background-color $green-one
    justify-content center
    text-align center

    +below($tablet)
        height auto

    .wrapper-home
        center(1440px)
        position absolute
        display block
        top 25%

        +below($tablet)
            top 0
            position relative

    .header-home
        width auto
        margin 0 auto
        text-align center
        border-bottom 1px solid $yellow-cheese
        opacity 0
        @extends .titleAnimation
        animation-duration .8s
        animation-delay .6s
        -ms-transform translateY(0)
        transform translateY(0)

        .image
            width 180px
            height 180px
            border-radius 50%
            border 2px solid $yellow-cheese
            padding 5px

        .heading-group
            border-bottom 1px solid $yellow-cheese
            padding-bottom 20px

            .title
                display block
                opacity 0
                color $yellow-cheese
                font-weight bold
                @extends .titleAnimation

            .description
                opacity 0
                display block
                color $yellow-cheese
                font-weight normal
                @extends .titleAnimation

    .intro
        opacity 0
        height auto
        border-bottom 2px solid $yellow-cheese
        padding 20px 0
        @extends .titleAnimation
        animation-duration 1.6s
        animation-delay 1.4s
        -ms-transform translateY(0)
        transform translateY(0)

        .text
            set-font-size(12px)
            color $gray-two
            text-align left

            +above($laptop)
                set-font-size(20px)

            +below($laptop)
                set-font-size(16px)
