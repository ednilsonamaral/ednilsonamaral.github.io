.home
    width auto
    height 100%
    padding 10px
    padding-bottom 0
    background-color $green-one
    justify-content center
    text-align center

    .header
        width auto
        margin 0 auto
        text-align center
        border-bottom 1px solid $yellow-cheese

        .image
            width 180px
            height 180px
            border-radius 50%
            border 2px solid $yellow-cheese
            padding 5px

        .heading-group
            border-bottom 1px solid $yellow-cheese
            padding-bottom 20px

            .title
                display block
                opacity 0 !important
                color $yellow-cheese
                font-weight bold
                @extends .titleAnimation

            .description
                opacity 0
                display block
                color $yellow-cheese
                font-weight normal
                @extends .titleAnimation

    .intro
        height auto
        border-bottom 2px solid $yellow-cheese
        padding 20px 0

        .text
            set-font-size(12px)
            color $gray-two
            text-align left
