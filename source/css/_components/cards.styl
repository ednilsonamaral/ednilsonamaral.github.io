.wrapper-cards
    margin-top 30px

    .card-legend
        position relative
        display block
        margin-bottom 15px
        text-shadow 1px 1px 1px $gray-three

    .card
        margin 15px 0
        background white
        box-shadow 1px 1px 2px $gray-three

        +above($tablet)
            col(1/2)
            margin 0 10px 15px 0

        +above($laptop)
            col(1/3)
            margin 0 20px 15px 0

            &:nth-child(4)
                margin 0 0 15px 0

        .image
            //-

            img
                width 100%

        .text
            padding 10px

            .title-project
                set-font-size(18px)
                font-weight bold
                text-align center
                color $green-one

            p
                set-font-size(14px)
                margin-bottom 10px

            .link-resultado
                text-align center
                font-style italic
